<%= content_tag :div, id: 'client-form', class: 'columns', data: { client: client.to_json(except: [:created_at, :updated_at]) } do %>
  <div class='column'>
    <div id="form" class="card">
      <div class="card-content">
        <h2 class="title">Cadastrar Usuário</h2>

        <label>Nome</label>
        <input type='text' v-model="client.name" class="input">

        <label>Email:</label>
        <input type='text' v-model="client.email" class="input">

        <label>Telefone:</label>
        <input type='text' v-model="client.phone" class="input">

        <label>Descrição</label>
        <input type='text' v-model="client.description" class="input">

        <label>Experiencia 1</label>
        <textarea class="textarea" v-model="client.exp1"></textarea>

        <label>Experiencia 2</label>
        <textarea class="textarea" v-model="client.exp2"></textarea>

        <label>Experiencia 3</label>
        <textarea class="textarea" v-model="client.exp3"></textarea>

        <label>Formação</label>
        <textarea class="textarea" v-model="client.education"></textarea>

        <label>Extras</label>
        <textarea class="textarea" v-model="client.extras"></textarea>

        <label>Sexo</label>
        <select v-model="client.gender" class="select">
          <option>Masculino</option>
          <option>Feminino</option>
        </select>
      </div>
      <div class="card-footer">
        <button @click="saveUser" class="button is-link">Criar Currículo</button>
      </div>
    </div>
  </div>

  <div class='column is-two-thirds preview card'>
    <div id="cv-preview" class="card-content">
      <h3 class="center title name">{{ client.name }}</h3>
      <p class="center subtitle"><b v-if="client.phone != null">Telefone de contato:</b> {{ client.phone }}    <b v-if="client.email != null">Email:</b> {{ client.email }}    <b v-if="client.gender != null">Sexo:</b> {{ client.gender }}</p>

      <div class="description">
        <p class="subtitle" v-if="client.description != null">Descrição</p>
        <p>
          {{ client.description }}
        </p>
      </div>

      <div class="exp">
        <p class="subtitle" v-if="client.exp1 != null">Experiencia 1</p>
        <p>
          {{ client.exp1 }}
        </p>
      </div>

      <div class="exp">
        <p class="subtitle" v-if="client.exp2 != null">Experiencia 2</p>
        <p>
          {{ client.exp2 }}
        </p>
      </div>

      <div class="exp">
        <p class="subtitle" v-if="client.exp3 != null">Experiencia 3</p>
        <p>
          {{ client.exp3 }}
        </p>
      </div>

      <div class="education">
        <p class="subtitle" v-if="client.education != null">Formação</p>
        <p>
          {{ client.education }}
        </p>
      </div>

      <div class="extras">
        <p class="subtitle" v-if="client.extras != null">Extras</p>
        <p>
          {{ client.extras }}
        </p>
      </div>
    </div>
  </div>
<% end %>
